{
  "name": "TwitchLurker",
  "main": "main.js",
  "version": "0.0.4",
  "author": "Luiz Eduardo",
  "description": "A app to lurk into twitch chats",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder --ia32",
    "release": "electron-builder --ia32 --publish always"
  },
  "devDependencies": {
    "electron": "^7.2.4",
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.1.1"
  },
  "dependencies": {
    "tmi.js": "^1.5.0"
  },
  "build": {
    "appId": "com.electron.twitchlurker",
    "productName": "TwitchLurker",
    "copyright": "Copyright Â© 2020 ${author}",
    "directories": {
      "buildResources": "resources/assets",
      "output": "releases"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "leduard",
      "repo": "TwitchLurker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
