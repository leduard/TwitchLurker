{
  "name": "TwitchLurker",
  "main": "main.js",
  "version": "0.0.2",
  "author": "Luiz Eduardo",
  "description": "A app to lurk into twitch chats",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder",
    "release": "electron-builder --publish always"
  },
  "devDependencies": {
    "electron": "^7.1.7",
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.1.1",
    "electron-winstaller": "^3.0.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "tmi.js": "^1.5.0"
  },
  "build": {
    "appId": "com.electron.twitchlurker",
    "productName": "TwitchLurker",
    "copyright": "Copyright Â© 2020 ${author}",
    "directories": {
      "buildResources": "resources/assets",
      "output": "releases"
    },
    "files": [
      "!releases/*",
      "!.vscode/*",
      "!resources/channels.json",
      "!resources/credentials.json"
    ],
    "win": {
      "target": "portable"
    },
    "publish": {
      "provider": "github",
      "owner": "leduard",
      "repo": "TwitchLurker"
    }
  }
}
